{
  "configurations": [
    {
      "type": "chrome",
      "name": "Launch Chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "port": 5422,
      "runtimeArgs": [
        "--load-extension=/Users/wuzhaoyi/Library/Application Support/Google/Chrome/Default/Extensions/fmkadmapgofadopljbjfkapdkoienihi/4.27.3_1"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Webpack",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--max-old-space-size=12288 --max-http-header-size=200000"
      },
      "console": "integratedTerminal",
      "args": [
        "serve",
        "--config",
        "config/webpack.dev.js",
        "--env",
        "lazyCompilation=true"
      ]
    }
  ]
}
